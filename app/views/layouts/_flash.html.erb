<% if flash.present? %>
  <% flash.each do |level, msg| %>
    <div class="<%= bootstrap_alert(level) %> alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;<span>
      </button>
      <%= msg %>
    </div>
  <% end %>
<% end %>
